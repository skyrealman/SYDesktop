<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 title="跟踪事项">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.sz.sydesktop.model.ModelLocator;
			import com.sz.sydesktop.vo.TrackVO;
			import com.sz.sydesktop.util.Constants;
			import spark.events.GridEvent;
			
			protected function TrackGrid_gridDoubleClickHandler(event:GridEvent):void
			{
				var tVO:TrackVO = TrackGrid.selectedItem as TrackVO;
				var jump:String = Constants.documentUrl+"?_docid="+tVO.id+"&_formid="+TrackVO.formid;
				var url:String = Constants.autoLoginUrl+"?token="+ModelLocator.USER_TOKEN+"&djump="+escape(jump)+"&appid=11df-d5cd-a070e761-9234-c19050f7abd5";
				var urlRequest:URLRequest = new URLRequest(url);
				//trace(url);
				navigateToURL(urlRequest);				
			}
			
		]]>
	</fx:Script>
	<mx:VBox width="100%" height="100%">
		<s:DataGrid requestedRowCount="10" height="100%" width="100%" id="TrackGrid" dataProvider="{ModelLocator.getInstance().tracks}" gridDoubleClick="TrackGrid_gridDoubleClickHandler(event)" doubleClickEnabled="true">
			<s:columns>
				<s:ArrayList>
					<s:GridColumn dataField="title" headerText="事件描述" width="{TrackGrid.width/2}"></s:GridColumn>
					<s:GridColumn dataField="person" headerText="经办人" width="{TrackGrid.width/4}"></s:GridColumn>
					<s:GridColumn dataField="date" headerText="日期"></s:GridColumn>
				</s:ArrayList>
			</s:columns>
			<s:typicalItem>
				<fx:Object dataField1="示例数据" dataField2="示例数据" dataField3="示例数据"></fx:Object>
			</s:typicalItem>

		</s:DataGrid>
		
	</mx:VBox>
</s:Panel>
