<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:control="com.sz.sydesktop.view.components.*"
		 title="通讯录" creationComplete="creationCompleteHandle()">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			protected function creationCompleteHandle():void{
				
				var orgData:ArrayCollection = new ArrayCollection();
				for( var x:uint = 1; x <= 555; x++ )
				{
					var obj:Object = new Object();
					obj.aa="数据"+x.toString();
					obj.bb="数据"+x.toString();
					obj.cc="数据"+x.toString();
					orgData.addItem(obj);
				}
				contactPagingBar.dataGrid=DataGrid1;
				contactPagingBar.orgData=orgData;
				contactPagingBar.dataBind();
			}
		]]>
	</fx:Script>
	<mx:VBox width="100%" height ="100%">
		<s:DataGrid requestedRowCount="10" width="100%" height="100%" id="DataGrid1">
			<s:columns>
				<s:ArrayList>
					<s:GridColumn dataField="aa" headerText="列 1"></s:GridColumn>
					<s:GridColumn dataField="bb" headerText="列 2"></s:GridColumn>
					<s:GridColumn dataField="cc" headerText="列 3"></s:GridColumn>
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
		<control:PagingBar id="contactPagingBar" />
	</mx:VBox>
</s:Panel>
